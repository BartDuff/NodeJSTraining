html
    head
        meta(charset='utf-8')
        title Page Bonjour 
        link(rel="stylesheet" 
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" 
        crossorigin="anonymous")
    body
        div(action="/add" class="container" method="POST")
            h1 Bonjour à toi #{ prenom }
            form(method="get" classe="form-inline")
                div(class="form-group")
                    input(type="text")
                div(class="form-group")    
                    select
                        option(value="addition" name="add" selected) Addition
                        option(value="soustraction" name="sub") Soustraction
                        option(value="multiplication" name="mult") Multiplication
                        option(value="division" name="div") Division
                div(class="form-group")
                    input(type="text")

                button(type="submit" class="btn btn-primary") Calculer

            p Votre opération vaut #{ result }


